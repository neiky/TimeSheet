<tr id="timerecord_<%= timerecord.id %>">
  <% if show_project %>
    <td><%= link_to timerecord.Project, project_path(timerecord.Project) %></td>
  <% end %>
  <% if show_user %>
    <td><%= link_to timerecord.User, user_path(timerecord.User) %></td>
  <% end %>
  <% if show_date %>
    <td><%= timerecord.start.to_date %></td>
  <% end %>
  <td><%= timerecord.start.strftime("%H:%M") %></td>
  <td><%= timerecord.end.strftime("%H:%M") %></td>
  <td><%= format_seconds_to_time(timerecord.duration) %></td>
  <td><%= timerecord.description %></td>
  <td>
    <% if params[:action] != "analyze" && timerecord.User == current_user %>
      <%= link_to edit_timerecord_path(timerecord), :class => 'btn', :title => "Bearbeiten", 'data-placement' => 'bottom', 'rel' => 'xtooltip', :remote => true, 'data-toggle' => 'modal', 'data-target' => "#modal-dialog" do %><i class="icon-edit"></i><% end %>
    <% end %>
    <% if params[:action] != "analyze" %>
      <%= link_to timerecord, confirm: 'Are you sure?', remote: :true, method: :delete, :class => 'btn btn-danger', :title => "LÃ¶schen" do %><i class="icon-remove-sign"></i><% end %>
    <% end %>
  </td>
</tr>