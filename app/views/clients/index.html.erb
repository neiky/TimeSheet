<div class="page-header">
  <h2>Kundenliste <%= image_tag("ajax-loader.gif", :style => "visibility: hidden", :id => "img_ajax_loader") %></h2>
</div>

<%= link_to 'Neuen Kunden anlegen', new_client_path, :class => 'btn btn-primary', :remote => :true %>

<div class="row content">
  <div class="span4">
    <table class="table table-striped">
      <thead>
      </thead>

      <tbody>
      <% @clients.each do |client| %>
        <tr id="client_<%= client.id %>" class="<% if client == @client %>selected<% else %>unselected<% end %>">
          <td><%= link_to client.name, client, :remote => :true %></td>
        </tr>
      <% end %>
      </tdody>
    </table>
  </div>
  <div id="client_details" class="span7 offset1">
    <%= render @client if @client %>
  </div>

</div>