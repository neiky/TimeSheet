<table class="table-details">
  <thead>
  </thead>
  <tbody>
    <tr>
      <td>Name</td>
      <td><%= @contact %></td>
    </tr>
    <tr>
      <td>Kunde</td>
      <td><%= link_to @contact.client, client_path(@contact.client) %></td>
    </tr>
    <tr>
      <td>E-Mail</td>
      <td><%= @contact.email %></td>
    </tr>
    <tr>
      <td>Telefon</td>
      <td><%= @contact.phone %></td>
    </tr>
    <tr>
      <td>Anmerkungen</td>
      <td><%= @contact.comment %></td>
    </tr>
  </tbody>
</table>

<% if can? :update, @contact %>
  <%= link_to 'Edit', edit_contact_path(@contact), :class => 'btn btn-mini' %>
<% end %>