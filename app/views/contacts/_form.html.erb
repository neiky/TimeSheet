<%= form_for(@contact, :html => { :class => 'form-horizontal' }) do |f| %>
  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @contact.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :name, :class => "span3" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :firstname, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :firstname %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :email, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :email %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :phone, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :phone %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :client_id, :class => "control-label" %>
    <div class="controls">
      <%= f.collection_select :client_id, Client.where(:user_id => current_user.id), :id, :name, {:include_blank => 'None'}, :class => "span3" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :comment, :class => "control-label" %>
    <div class="controls">
      <%= f.text_area :comment, :size => "20x3", :class => "span3" %>
    </div>
  </div>

  <div class="controls">
    <%= f.submit :class => "btn btn-primary" %>
  </div>
<% end %>