<div class="page-header">
  <h2>Listing contacts</h2>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Client</th>
      <th>E-Mail</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @contacts.each do |contact| %>
    <tr id="contact_<%= contact.id %>">
      <td><%= contact %></td>
      <td><%= link_to contact.client, client_path(contact.client) %></td>
      <td><%= contact.email %></td>

      <td>
      	<%= link_to contact, :class => 'btn btn-mini' do %><i class="icon-eye-open"></i> Show<% end %>
      	<%= link_to edit_contact_path(contact), :class => 'btn btn-mini' do %><i class="icon-pencil"></i> Edit<% end %>
      	<%= link_to contact, confirm: 'Are you sure?', method: :delete, :class => 'btn btn-mini btn-danger' do %><i class="icon-trash"></i> Delete<% end %>
      </td>
    </tr>
  <% end %>
  </tdody>
</table>

<br />

<%= link_to 'New contact', new_contact_path, :class => 'btn btn-primary' %>