<div class="page-header">
  <h2>Kontaktliste</h2>
</div>

<%= link_to 'Neuen Kontakt anlegen', new_contact_path, :class => 'btn btn-primary' %>

<div class="row content">
  <div class="span4">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Kunde</th>
        </tr>
      </thead>

      <tbody>
      <% @contacts.each do |contact| %>
        <tr id="contact_<%= contact.id %>">
          <td><%= link_to contact, contact, :remote => :true %></td>
          <td><%= link_to contact.client, client_path(contact.client) %></td>
        </tr>
      <% end %>
      </tdody>
    </table>
  </div>
