<div class="page-header">
  <h2>Listing projects</h2>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Client</th>
      <th>Planned efforts</th>
      <th>Actual efforts</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @projects.each do |project| %>
    <tr id="project_<%= project.id %>">
      <td><%= link_to project.name, project %></td>
      <td><%= project.Client %></td>
      <td><%= format_seconds_to_time(project.planned_efforts) %></td>
      <td><%= format_seconds_to_time(project.total_duration) %></td>
      <td>
			<% if project.Client.user_id == current_user.id %>
	      <%= link_to edit_project_path(project), :class => 'btn', :title => "Bearbeiten" do %><i class="icon-pencil"></i><% end %>
				<%= link_to project, confirm: 'This will delete the project and all related time records! Continue?', :remote => true, method: :delete, :class => 'btn btn-danger', :title => "LÃ¶schen" do %><i class="icon-trash"></i><% end %></td>
			<% else %>
				<span class="btn disabled" title="You may not edit the project because you are not the owner!"><i class="icon-pencil"></i></span>
				<span class="btn btn-danger disabled" title="You may not delete the project because you are not the owner!"><i class="icon-trash"></i></span>
			<% end %>
    </tr>
  <% end %>
  </tdody>
</table>

<br />

<%= link_to 'New Project', new_project_path, :class => 'btn btn-primary' %>
