<div class="page-header">
  <h2>Projekt "<%= @project.name %>"</h2>
</div>

<div class = "row">
	
	<div class = "span6">
		<h3>Nachrichten</h3>
		
		<%= render "projectnotes/form" %>
		
		<div id = "projectnotes">
			<%= render(@project.projectnotes) %>
		</div>
		
		<div id = "rawdata">
		</div>
	</div>

	<div class = "span6">
		<h3>Details</h3>
	
		<table class="table-details">
		  <thead>
		  </thead>
		  <tbody>
		    <tr>
		      <td>Description</td><td><%= @project.description %></td>
		    </tr>
		    <tr>
		      <td>Planned efforts</td><td><%= format_seconds_to_time(@project.planned_efforts) %></td>
		    </tr>
		    <tr>
		      <td>Actual efforts</td><td><%= format_seconds_to_time(@project.total_duration) %></td>
		    </tr>
		    <tr>
		      <td>Client</td>
		      <td>
		      <% if @project.Client.user_id == current_user.id %>
					  <%= link_to @project.Client, client_path(@project.Client) %></td>
					<% else %>
						<%= @project.Client %>
					<% end %>
		    </tr>
		    <tr>
		      <td>Project members</td>
		      <td>
		         <% @project.users.each do |user| %>
				      <p id="member_<%= user.id %>">
							<%= render(user) %>
							<% if @project.Client.user_id == user.id %>
								<span class="label label-info">Project owner</span>
							<% end %>
							</p>
						<% end %>
		      </td>
		    </tr>
		  </tbody>
		</table>
		<p>
			<%= link_to "Analyze time records", analyze_timerecords_path(:filter_project => @project.id) %><br />
		  <b><a href="#" class="buttonToggle" data-toggle-this="toggleTimeRecords">Time records <i class="icon-list"></i></a></b>
		  <div class="toggleVisibility" id="toggleTimeRecords">
		    <table class="table table-condensed">
		      <thead>
		        <tr>
		          <th>User</th>
		          <th>Date</th>
		          <th>Start</th>
		          <th>End</th>
		          <th>Duration</th>
		          <th>Description</th>
		          <th></th>
		        </tr>
		      </thead>
		      <tbody id="timerecordsList">
		        <%= render(@project.timerecords.order("start ASC"), { :show_date => true, :show_user => true, :show_project => false }) %>
		      </tbody>
		    </table>
		  </div>
		</p>
		<% if can? current_user, :edit, @project %>
		  <%= link_to edit_project_path(@project), :class => 'btn btn-mini' do %><i class="icon-pencil"></i> Edit<% end %>
		<% else %>
			<span class="btn btn-mini disabled" title="You may not edit the project because you are not the owner!"><i class="icon-pencil"></i> Edit</span>
		<% end %>
		<%= link_to projects_path, :class => 'btn btn-mini' do %><i class="icon-remove"></i> Back<% end %>
	
	</div>
</div>