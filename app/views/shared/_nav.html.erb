<ul class="nav">
  <%= content_tag(:li, link_to("Projects", projects_path), :class => ("active" if (params[:controller] == 'projects'))) %>

  <%= content_tag(:li, link_to("Clients", clients_path), :class => ("active" if (params[:controller] == 'clients'))) %>

  <%= content_tag(:li, link_to("Contacts", contacts_path), :class => ("active" if (params[:controller] == 'contacts'))) %>

  <% #content_tag(:li, link_to("Time records", timerecords_path), :class => "dropdown-toggle " + ("active" if (params[:controller] == 'timerecords'))) %>

  <li class="dropdown <%= "active" if (params[:controller] == 'timerecords') %>">
    <a href="#"
      class="dropdown-toggle"
      data-toggle="dropdown">
      Time records
      <b class="caret"></b>
    </a>
    <ul class="dropdown-menu">
      <%= content_tag(:li, link_to("Add time records", timerecords_path)) %>
      <%= content_tag(:li, link_to("Analyze time records", analyze_timerecords_path)) %>
    </ul>
  </li>

  <% if can? current_user, :manage, User %>
    <%= content_tag(:li, link_to("Users", users_path), :class => ("active" if (params[:controller] == 'users'))) %>
  <% end %>

  <% if can? :manage, current_user.employment %>
  	<%= content_tag(:li, link_to("Employees", employments_path), :class => ("active" if (params[:controller] == 'employments'))) %>
  <% end %>

  <li>
    <%= link_to messages_path, :class => ("active" if (params[:controller] == 'messages')) do %>
      Messages
      <% if Message.where(:recipient_id => current_user.id, :read => false).count > 0 %>
        <span class="badge badge-important"><%= Message.where(:recipient_id => current_user.id, :read => false).count %></span>
      <% end %>
    <% end %>
  </li>
</ul>
