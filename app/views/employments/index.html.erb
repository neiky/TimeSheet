<div class="page-header">
  <h2>Listing employees</h2>
</div>

<p><%= link_to current_user.get_full_name, @self_employment %></p>
	
<% @employments.find_all{|employment| employment.employee_id > 0}.each do |employment| %>
	<p>
  	<%= link_to employment.employee.get_full_name, employment %>
  	<% if !employment.accepted %>
			<span class="label label-warning">Invitation pending</span>
		<% end %>
  </p>
<% end %>

<%= link_to 'Add employee', new_employment_path, :class => 'btn btn-primary' %>